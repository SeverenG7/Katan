<Window x:Class="Katan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Katan"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="KatanaTraining" Height="600" Width="1000">
    <Window.Background>
        <ImageBrush ImageSource="Resources/wallpaper.jpg"/>
    </Window.Background>
    <Grid 
                   Height="500" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <UserControl Grid.Row="0" Height="100">
            <local:Register/>
        </UserControl>
        <UserControl Grid.Row="2" Height="100">
            <local:Register_2/>
        </UserControl>
    </Grid>
</Window>
